# DICTIONARIES IN PYTHON

# Creating a dictionary
student = {
    "name": "emma",
    "age": 22,
    "course": "Data Science"
}

print("Dictionary:", student)

# Accessing values
print("Student Name:", student["name"])

# Adding new key-value pair
student["grade"] = "A"
print("After adding grade:", student)

# Updating value
student["age"] = 23
print("After updating age:", student)

# Looping through dictionary
print("\nDictionary items:")
for key, value in student.items():
    print(f"{key}: {value}")

# SETS IN PYTHON
# Sets are unordered collections with unique values (no duplicates).

# Creating a set
numbers = {1, 2, 3, 3, 4}
print("\nSet (duplicates removed):", numbers)

# Adding an element
numbers.add(5)
print("After add:", numbers)

# Removing an element
numbers.discard(2)
print("After discard:", numbers)

# Set operations
even = {2, 4, 6}
odd = {1, 3, 5}

print("Union:", even.union(odd))
print("Intersection:", even.intersection(numbers))
print("Difference:", numbers.difference(even))
